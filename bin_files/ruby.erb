#!/usr/bin/env bash

cd $(dirname $0)/..

export RUBY=bin/ruby #This is needed to prevent rake from exploding

stage_chorus_home=${CHORUS_HOME}
if [ -f ~/.bash_profile ]; then
    source ~/.bash_profile
fi
if [ -f ~/.profile ]; then
    source ~/.profile
fi
export CHORUS_HOME=${stage_chorus_home}

<%=@java_dash_jar%> <%=@jruby_jar_file%> <%=@jruby_opts%> "$@"
